{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/esm",
        "rootDir": "./src/",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationDir": "./dist/esm/types",
        "declarationMap": true

    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "test",
        "src/Devices/*/Generated/*",



    ]
}